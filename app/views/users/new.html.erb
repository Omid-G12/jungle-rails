<header class="page-header">
  <h1>Signup!</h1>
</header>

<%= form_for :user, url: '/users' do |f| %>

  <div class="form-group">
    Name:
    <br>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    Email:
    <br>
    <%= f.text_field :email %>
  </div>
  
  <div class="form-group">
    Password:
    <br>
    <%= f.password_field :password %>
  </div>
  
  <div class="form-group">
    Password Confirmation:
    <br>
    <%= f.password_field :password_confirmation %>
  </div>
  
  <br>
  <div>
  <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>

<% end %>
